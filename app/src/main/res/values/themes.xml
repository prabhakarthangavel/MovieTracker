<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MovieTracker.MainTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!--        color for the action space Netowork and task bar color-->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <!--        all pages background color-->
        <item name="android:windowBackground">@color/background</item>
        <!--        all pages font-->
        <item name="android:fontFamily">@font/amazonembermedium</item>
        <item name="colorAccent">@color/primaryBackgroundColor</item>
    </style>

    <style name="MovieTracker.MainTheme.mainPage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!--        color for the action space Netowork and task bar color-->
        <item name="android:statusBarColor">@color/primaryBackgroundColor</item>
        <item name="android:navigationBarColor">@color/primaryBackgroundColor</item>
        <!--        all pages background color-->
        <item name="android:windowBackground">@color/background</item>
        <!--        all pages font-->
        <item name="android:fontFamily">@font/amazonembermedium</item>
        <!--        calender color-->
        <!--        <item name="colorPrimary">@color/primaryBackgroundColor</item>-->
        <!--        <item name="colorPrimaryDark">@color/primaryBackgroundColor</item>-->
        <item name="colorAccent">@color/primaryBackgroundColor</item>
        <!--        <item name="colorControlHighlight">@color/primaryBackgroundColor</item>-->
    </style>

    <style name="CustomBottomNavigationText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Widget.Material3.primaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primaryBackgroundColor</item>
        <item name="background">@drawable/primay_button_background</item>
        <item name="rippleColor">@color/primaryBackgroundColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="Widget.Material3.secondaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="background">@drawable/secondary_button_background</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#595959</item>
    </style>


</resources>